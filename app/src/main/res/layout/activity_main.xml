<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.huma.portfolio.MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:text="My Nanodegree Apps!"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Button
        android:id="@+id/popular_movies"
        style="@style/project_button"
        android:text="Popular Movies"/>

    <Button
        android:id="@+id/stock_hawk"
        style="@style/project_button"
        android:text="Stock Hawk"/>

    <Button
        android:id="@+id/build_it_bigger"
        style="@style/project_button"
        android:text="Build it Bigger"/>

    <Button
        android:id="@+id/make_your_app_material"
        style="@style/project_button"
        android:text="Make Your App Material"/>

    <Button
        android:id="@+id/go_ubiquitous"
        style="@style/project_button"
        android:text="Go Ubiquitous"/>

    <Button
        android:id="@+id/capstone"
        style="@style/project_button"
        android:text="Capstone"/>
</LinearLayout>
